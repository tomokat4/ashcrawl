#!/bin/bash

#Moralkompassen

cat << EOF  
	"Vel vel vel. Hva gjoer du naar du sitter skikkelig i saksa? Er du fortsatt en god person eller driter du fullstendig alt og alle hvis du faar som du vil?
	Daeven, der staar den der idioten til laerer som ikke liker deg. I god tradisjon er han klart overbetalt, som alle laerere er, og han boetter med cash...ja faktisk bare kontanter fordi han ikke tror p책 'data og saant...staten overvaaker deg etc etc'. Du ser lommeboka hans henge litt loest i hans baklomma for aa saa dette ned p책 bakken. Du kaster deg mot lommeboka og..."
read -p "du bestemmer deg for aa:(du m책 skrive inn svaret: TaPengene eller GiTilbakeAlt " svar

# Konverter svaret til sm책 bokstaver slik at svaret kan bli riktig.
svar=$(echo "$svar" | tr '[:upper:]' '[:lower:]')

# Sjekker svar
if [ -z "$svar" ]; then
    echo "Du maa nok skrive et av svarene"
    exit 1
fi

# Er svaret riktig
if [ "$svar" == "gitilbakealt" ]; then
    echo "'Hei, du mistet denne' sier du til laereren. 'Takk $SPILLER, det var meget snilt av deg. Du har alltid virket som en grei karl - men jeg har hoert at du sliter med oekonomien..her ta litt penger som takk.' Aa du som trodde at han mente at du var en idiot. Vel...lucky you at laereren hadde hoye tanker om deg da."
mv .LittPenger LittPenger
chmod +r LittPenger
if [ "$svar" == "tapengene" ]; then
    echo " Toeffing! Stjeler fra en som snart er pensjonist. Bra jobba *langsom applaus*..virkelig"
	mv .LittPenger LittPenger
	chmod +r LittPenger
    # Trekk fra ett poeng for DUSTETE svar
    # Forutsetter at poengene er lagret i filen .poeng_$SPILLER
    poeng=$(cat ".poeng_$SPILLER")
    echo "$((poeng - 1))" > ".poeng_$SPILLER"
